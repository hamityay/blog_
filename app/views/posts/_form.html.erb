<%= form_for @post do |f| %>

  <% if @post.errors.any? %>
    <div id="erors">
      <h2><%= pluralize(@post.errors.count, "error") %> prevented thid post from saving </h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, placeholder: 'title' %></p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body, placeholder: 'body', rows: 5 %></p>
  <p>
    <%= f.submit %></p>
<% end %>
